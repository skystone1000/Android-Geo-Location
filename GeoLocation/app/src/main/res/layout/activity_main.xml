<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_implementation1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:text="Impl 1 - Codelab : While in use"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_implementation2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Impl 2 - Basic Latitude, Longitude"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_implementation1" />

    <Button
        android:id="@+id/btn_implementation3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Impl 3 - FusedLocationProviderClient"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_implementation2" />

    <Button
        android:id="@+id/btn_implementation4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Impl 4 - LocationManager"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_implementation3" />



</androidx.constraintlayout.widget.ConstraintLayout>